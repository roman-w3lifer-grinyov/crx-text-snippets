{
  "manifest_version": 3,
  "name": "Text Snippets",
  "version": "1.1.3",

  "action": {
    "default_icon": {
      "16": "img/icons/16x16.png",
      "24": "img/icons/24x24.png",
      "32": "img/icons/32x32.png"
    },
    "default_title": "Text Snippets",
    "default_popup": "html/popup.html"
  },
  "description": "Prepare pieces of text (icons, emoji, phrases, etc) and keep them always at hand",
  "icons": {
    "16": "img/icons/16x16.png",
    "48": "img/icons/48x48.png",
    "128": "img/icons/128x128.png"
  },

  "background": {
    "service_worker": "service-worker.js"
  },
  "options_page": "html/options.html",
  "permissions": ["downloads", "storage"]
}
