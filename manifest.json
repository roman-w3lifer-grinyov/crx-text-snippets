{
  "manifest_version": 3,
  "name": "Text Snippets",
  "description": "Prepare text fragments (icons, emoji, phrases, etc.) and keep them always at hand",
  "version": "1.2.0",
  "icons": {
    "16": "img/icons/16x16.png",
    "48": "img/icons/48x48.png",
    "128": "img/icons/128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/icons/16x16.png",
      "48": "img/icons/48x48.png",
      "128": "img/icons/128x128.png"
    },
    "default_title": "Text Snippets",
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "side_panel": {
    "default_path": "html/popup.html"
  },
  "permissions": [
    "downloads",
    "sidePanel",
    "storage"
  ]
}
